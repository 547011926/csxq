@charset "utf-8";
@import "compass/reset";
@import "compass/css3";

@mixin clearfix {
  &:before,
  &:after {
    content: "";
    display: table;
  }
  &:after {
    clear: both;
    overflow: hidden;
  }
}

%clearfix {
  @include clearfix;
}

textarea {
  resize: none;
}
//禁止多行文本被拖拽
a, input, button {
  outline: none;
}
//去掉点击链接时的虚线边框
::-moz-focus-inner {
  border: 0px;
}
///掉点击链接时的虚线边框
a {
  text-decoration: none;
}

$bodyBacolor: #ededed;
$baColor: white;
$onerem:1rem;
$half:.5rem;
$lr:auto;
@mixin border($size,$color){
  border:$size solid $color;
}

@mixin sizing {
  -webkit-box-sizing: border-box;
}

@mixin padding($top, $right, $bottom, $left) {
  padding: $top $right $bottom $left;
}

@mixin margin($top, $right, $bottom, $left) {
  margin: $top $right $bottom $left;
}

@mixin fontSize($size: 1rem) {
  font-size: $size;
}

@mixin display($dis: block) {
  display: $dis;
}

@mixin height($height, $lineHeight) {
  height: $height;
  line-height: $lineHeight;
}

@mixin letterSpacing($letter:1px){
  letter-spacing: $letter;
}

@mixin cursor(){
  cursor: pointer;
}
html{
  height: 100%;
}
body {
  height: 100%;
  background: $bodyBacolor;
  font-family: "微软雅黑", "Times New Roman", "serif";
  font-size: 12px;
}
.mask{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 998;
  background: rgba(0,0,0,.5);
  text-align: center;
  line-height: 32px;
  letter-spacing:2px;
  overflow-x: scroll;
  text-align: left;
  @include sizing;
  .prompt{
    background: $baColor;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    text-align: center;
    @include padding(1.5rem,0,0,0);
    .determine{
      width: 50%;
      background: #5595d9;
      @include margin($onerem,auto,$onerem,auto);
      @include border-radius(.3rem);
      color: $baColor;
      @include cursor;
      .Determine{
        position: absolute;
        width: 50%;
        top: 0;
        right: 0;
        background:#5595d9;
        @include cursor;
        border-top-right-radius: 10rem;
        border-bottom-right-radius: 10rem;
        border-left:.15rem solid white ;
      }
      .cancel{
        @extend .Determine;
        left:0;
        border-top-left-radius: 10rem;
        border-bottom-left-radius: 10rem;
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
        border-left: none;
      }
    }
  }

}
.alert{
  background: $baColor;
  position: relative;
  width: 90%;
  @include margin(50%,auto,0,auto);
  @include border-radius(.5rem);
  img{
    position: absolute;
    left: 2rem;
    top: -8.5rem;
    width: 50%;
  }
  .options{
    @include clearfix;
    @include padding($onerem,5%,$onerem,5%);
    p{
      line-height: 25px;
    }
    .return{
      background: #5595d9;
      width: 48%;
      text-align: center;
      color: $baColor;
      display: inline-block;
      margin-top: 10px;
      @include cursor;
    }
    .queding{
      @extend .return;
    }
  }
}

.examination {
  .one {
    border: 1px solid #d6d6d6 {
      left: 0px;
      right: 0px;
    }
    background: $baColor;
    padding-bottom: .2rem;
    li {
      @mixin position($left: 25px, $top: 15px) {
        background-position: $left $top;
      }
      @include sizing;
      display: inline-block;
      width: 24%;
      cursor: pointer;
      background: url("../images/one.png") no-repeat 25px 15px;
      background-size: 50%;
      text-align: center;
      padding-top: 3.8rem;
      &#one-number {
        @include position(25px, -60px);
      }
      &#one-error {
        @include position(25px, -143px);
      }
      &#one-submit {
        @include position(25px, -219px);
      }
      &:nth-child(even) {
        span {
          background: #5696db;
          color: $baColor;
        }
      }
      span {
        @include display();
        width: 100%;
        background: #ededed;
        color: #666;
        @include padding(.2rem, 0, .2rem, 0);
        @include fontSize();
      }

    }
  }
  .two {
    background: white;
    h1 {
      @include display();
      line-height: 1.5rem;
      padding:$half 1.5rem;
      span {
        $height: 20px;
        @include display(inline-block);
        @include height($height, $height);
        border: 1px solid #9e9e9e;
        margin-right: .4rem;
        padding: 0 .4rem;
      }
    }
    img {
      width: 50%;
      @include display();
      @include margin(0,auto,$onerem,auto);
    }
    p {
      position: relative;
      cursor: pointer;
      @include padding($half,0,$half,4rem);
      border-top: .1rem solid #d6d6d6;
      line-height: 1.2rem;
      &.item {
        background: $baColor;
        span {
          background: #5696db;
          border-color: #5696db;
          color: $baColor;
        }
      }
      span {
        $height: 24px;
        @include display;
        @include border-radius(50%);
        @include height($height, $height);
        width: 24px;
        text-align: center;
        position: absolute;
        left: 2rem;
        top: .3rem;
        color: #666;
        border: 1px solid #666;
      }
    }
    .submit{
      width: 50%;
      background: #5595d9;
      color: $baColor;
      text-align: center;
      @include  margin($half,auto,$half,auto);
      @include padding($half,0,$half,0);
      @include cursor();
      @include border-radius(.3rem);
      @include fontSize(.8rem);
    }
  }

}

